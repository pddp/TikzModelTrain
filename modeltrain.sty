\def\LSwitchParO#1#2#3#4{%
   \SavePosAngle{#1}%
   \LCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1S}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1}%
   \NormalStraight{18}{}%
}
\def\LSwitchParS#1#2#3#4{%
   \NormalStraight{18}{}%
   \SavePosAngle{#1}%
   \SavePosAngle{#1S}%
   \NoOb {\AddToAngle{-180}}%
   \LCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1}%
}
\def\LSwitchParC#1#2#3#4{%
   \SavePosAngle{#1}%
   \NormalStraight{18}{}%
   \SavePosAngle{#1S}%
   \RestPosAngle{#1}%
   \LCurvePar{#2}{#3}{#4}{}%
}
\def\RSwitchParS#1#2#3#4{%
   \NormalStraight{18}{}%
   \SavePosAngle{#1S}%
   \NoOb {\AddToAngle{-180}}%
   \RCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1S}%
}
\def\RSwitchParC#1#2#3#4{%
   \LCurvePar{#2}{#3}{#4}{}%  % R curve!
   \SavePosAngle{#1O}%
   \NoOb {\AddToAngle{-180}}%
   \NormalStraight{18}{}%
   \SavePosAngle{#1S}%
   \RestPosAngle{#1O}%
}
\def\RSwitchParO#1#2#3#4{%
   \SavePosAngle{#1}%

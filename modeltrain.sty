}
\def\XSwitchParO#1#2#3#4{%
   \SavePosAngle{#1}%
   \RCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1}%
   \NormalStraight{18}{}%
   \SavePosAngle{#1S}%
   \NoOb {\AddToAngle{-180}}%

\def\LWeicheParO#1#2#3#4{%
   \SavePosAngle{#1}%
   \LCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1S}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1}%
   \NormalGerade{18}%
}
\def\LWeicheParS#1#2#3#4{%
   \NormalGerade{18}%
   \SavePosAngle{#1}%
   \SavePosAngle{#1S}%
   \NoOb {\AddToAngle{-180}}%
   \LCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1}%
}
\def\LWeicheParC#1#2#3#4{%
   \SavePosAngle{#1}%
   \NormalGerade{18}%
   \SavePosAngle{#1S}%
   \RestPosAngle{#1}%
   \LCurvePar{#2}{#3}{#4}{}%
}
\def\RWeicheParS#1#2#3#4{%
   \NormalGerade{18}%
   \SavePosAngle{#1S}%
   \NoOb {\AddToAngle{-180}}%
   \RCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1S}%
}
\def\RWeicheParC#1#2#3#4{%
   \LCurvePar{#2}{#3}{#4}{}%  % R curve!
   \SavePosAngle{#1O}%
   \NoOb {\AddToAngle{-180}}%
   \NormalGerade{18}%
   \SavePosAngle{#1S}%
   \RestPosAngle{#1O}%
}
\def\RWeicheParO#1#2#3#4{%
   \SavePosAngle{#1}%
   \RCurvePar{#2}{#3}{#4}{}%
   \SavePosAngle{#1C}%
   \RestPosAngle{#1}%
   \NormalGerade{18}%
   \SavePosAngle{#1S}%
}


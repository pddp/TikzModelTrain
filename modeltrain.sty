\def\StepGleis#1{%
   \expandafter\@tempcnta\@nameuse{N#1}%
   \advance\@tempcnta by 1\relax
   \@namegedef{N#1}{\the\@tempcnta}\relax
}

\def\Bullet{\pgfmathsetmacro\XAngle{\Angle + 90}\rotatebox{\XAngle}{\tiny{|}}}


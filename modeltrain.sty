\def\AddToAngle#1{%
   \pgfmathsetmacro\XAngle{\Angle + #1}%
   \pgfmathsetmacro\YAngle{\Angle > 360 ? \XAngle -360 : \XAngle}%
   \pgfmathsetmacro\ZAngle{\Angle < -360 ? \YAngle +360 : \YAngle}%
   \global\edef\Angle{\ZAngle}%
}


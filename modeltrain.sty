\def\NoOb{arc [radius=50,start angle=0,end angle=0] node}

\def\SavePosAngle#1{coordinate(#1)%
    \NoOb{\@namegedef{#1-angle}{\Angle}%
          \@namegedef{#1-height}{\Height}}}

\def\RestPosAngle#1{(#1)% 
    \NoOb{\global\edef\Angle{\@nameuse{#1-angle}}%
          \global\edef\Height{\@nameuse{#1-height}}}}

\def\NormalStraight#1#2{%
    \NoOb {%
        \global\edef\Length{#1}%  % can be changed for inclined tracks
        \ifnum\Incl>0\relax
           \pgfmathsetmacro\Xheight{\Height + 2.0 * #1 / 100}%  2 perc. inclination
           \global\edef\Height{\Xheight}%
           \pgfmathsetmacro\Xlength{0.98 * #1}%
           \global\edef\Length{\Xlength}%  
           \typeout{Height: \Height, \Xheight}%
           % \Height
        \fi
        \ifnum\Incl<0\relax
           \pgfmathsetmacro\Xheight{0.98 * \Height}%
           \pgfmathsetmacro\Xheight{\Height - 2.0 * #1 / 100}%  2 perc. downhill
           \global\edef\Height{\Xheight}%
           \pgfmathsetmacro\Xlength{0.98 * #1}%
           \global\edef\Length{\Xlength}%  
           \typeout{Height: \Height, \Xheight}%
           % \Height
        \fi
        \ShowTrackName{#2}%
    }%
    % [draw,color=red] 
    % edge[red] +(0,0)
    -- 
    +(\Angle:\Length) node {\Bullet}%
}
